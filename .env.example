# ═══════════════════════════════════════════════════
#  CtxPost - Social Media Scheduler
#  Environment Configuration
#  Copy this file to .env and fill in your values
# ═══════════════════════════════════════════════════

# ─── Database ──────────────────────────────────────
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/social_scheduler"
DIRECT_URL="postgresql://user:password@localhost:5432/social_scheduler"

# ─── NextAuth / Auth.js v5 ─────────────────────────
# Generate with: openssl rand -base64 32
AUTH_SECRET="generate-with-openssl-rand-base64-32"
# Your app URL (no trailing slash)
AUTH_URL="http://localhost:3000"
AUTH_TRUST_HOST=true
NEXTAUTH_URL="http://localhost:3000"

# ─── Google OAuth (optional) ──────────────────────
# Create at: https://console.cloud.google.com/apis/credentials
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ─── Facebook (optional) ──────────────────────────
# Create at: https://developers.facebook.com/apps
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""
FACEBOOK_REDIRECT_URI="http://localhost:3000/api/social/facebook/callback"

# ─── LinkedIn (optional) ──────────────────────────
# Create at: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=""
LINKEDIN_CLIENT_SECRET=""
LINKEDIN_REDIRECT_URI="http://localhost:3000/api/social/linkedin/callback"

# ─── Twitter/X (optional) ────────────────────────
# Create at: https://developer.twitter.com/en/portal
TWITTER_CLIENT_ID=""
TWITTER_CLIENT_SECRET=""
TWITTER_REDIRECT_URI="http://localhost:3000/api/social/twitter/callback"

# ─── Instagram (optional, uses Facebook App) ──────
INSTAGRAM_REDIRECT_URI="http://localhost:3000/api/social/instagram/callback"

# ─── Threads (optional) ──────────────────────────
# Uses Meta/Facebook developer credentials
THREADS_APP_ID=""
THREADS_APP_SECRET=""
THREADS_REDIRECT_URI="http://localhost:3000/api/social/threads/callback"

# ─── Anthropic / Claude AI (optional) ────────────
# Only needed if you want to use Claude instead of local Ollama
# Get at: https://console.anthropic.com/
ANTHROPIC_API_KEY=""

# ─── Ollama (local AI) ───────────────────────────
# Default local Ollama instance for AI features
OLLAMA_URL="http://localhost:11434"

# ─── Encryption ──────────────────────────────────
# 256-bit hex key for encrypting social media tokens
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="generate-with-openssl-rand-hex-32"

# ─── Cron Secret ─────────────────────────────────
# Secret for securing cron job API endpoints
# Generate with: openssl rand -hex 32
CRON_SECRET="generate-with-openssl-rand-hex-32"
